{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4">
                {% if product.image %}
                    <img src="{{ asset('uploads/' ~ product.image) }}" class="img-fluid rounded-start" alt="{{ product.name }}">
                {% else %}
                    <img src="{{ asset('assets/images/default.jpg') }}" class="img-fluid rounded-start" alt="Image par défaut">
                {% endif %}
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">{{ product.name }}</h3>
                    <p class="card-text text-muted">{{ product.description }}</p>
                    <p class="card-text"><strong>Prix :</strong> {{ product.price|number_format(2, ',', ' ') }} €</p>
                    <p class="card-text"><strong>Stock :</strong> {{ product.stock }}</p>

                    <div class="mt-4 d-flex justify-content-around">
                        <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary"> Retour à la liste</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary"> Modifier</a>
                        {{ include('product/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
