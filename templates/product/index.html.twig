{% extends 'base.html.twig' %}

{% block title %}Listes des produits {% endblock %}

{% block body %}
    

    <div class="container my-5">
        <div class="row">
            <div class="col-md-9">
                <div class="d-flex justify-content-between my-3">
                    <h1>Listes des produits</h1>
                    <div class="">
                    <a href="{{ path('app_product_new') }}" class="btn btn-success">Nouveau</a></div>
                </div>
               
                 <table class="table table-border">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Stock</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.id }}</td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.description }}</td>
                                <td>{{ product.price }}</td>
                               <td>
                                    <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 100px;">
                                </td>
                                <td>{{ product.stock }}</td>
                                <td class="d-flex">
                                    <a class=" btn btn-secondary mx-2" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                                    <a class=" btn btn-primary  mx-2" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                </table>
            </div>
        </div>
    </div>

   
{% endblock %}
